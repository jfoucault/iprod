{% extends "base.html.twig" %}
{% block body %}
    {% block content %}
        <div class="room_main_container">
            {% for material in materials %}
                <div class="element col-xs-12"  style="background-image: url({% if material.type == "light" %} {{asset('images/lightbulb.png')}} {% elseif material.type == "shutter" %} {{asset('images/window.png')}} {%  else  %} {% endif %} )">
                    <div class="elementName col-xs-9">
                        {{ material.name }}
                    </div>
                    <label class="col-xs-3 switch" >
                        <input type="checkbox" {% if material.isOpen %} checked {% endif %}>
                        <span class="slider round" onclick="stateHandler({{ material.id }})"></span>
                    </label>
                </div>
            {% endfor %}
        </div>
    {% endblock %}
    {% block backBand %}
        <div class="backBandLiving">
            <a href="{{ path( place ) }}">
                <button class="btn btnBand" style="background-image: url(./images/arrowBack.png)">Page d'accueil</button>
            </a>
        </div>
    {% endblock %}

{% endblock %}